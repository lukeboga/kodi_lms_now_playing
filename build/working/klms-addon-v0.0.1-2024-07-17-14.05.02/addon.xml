<addon id="plugin.program.klmsaddon" name="KLMS Addon" version="0.0.1" provider-name="LukeBM" extension="xbmc.python.script">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>program</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>KLMS Addon for Logitech Media Server</summary>
        <description>Fetch and display 'now playing' information from LMS.</description>
        <platform>all</platform>
    </extension>

</addon>

