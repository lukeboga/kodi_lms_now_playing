<!-- 
    Define the addon with a unique identifier, name, version, and provider name.
    The extension point is set to 'xbmc.python.script' to indicate a program addon.
-->
<addon id="plugin.program.klmsaddon" name="KLMS Addon" version="0.0.1" provider-name="LukeBM" extension="xbmc.python.script">

    <!-- 
        Specify the required dependencies for the addon.
        This section ensures that the necessary modules are available for the addon to function correctly.
    -->
    <requires>
        <!-- Import the core Python module for Kodi addon development -->
        <import addon="xbmc.python" version="3.0.0"/>
        <!-- Import the requests module for making HTTP requests -->
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>

    <!-- 
        Define the script extension point for the addon.
        This specifies the main Python script that will be executed when the addon is run.
        The 'provides' tag indicates that this addon offers program functionality.
    -->
    <extension point="xbmc.python.script" library="resources/lib/default.py">
        <provides>program</provides>
    </extension>

    <!-- 
        Provide metadata about the addon.
        This includes a summary, a detailed description, and the platforms on which the addon can run.
    -->
    <extension point="xbmc.addon.metadata">
        <!-- Brief summary of the addon -->
        <summary>KLMS Addon for Logitech Media Server</summary>
        <!-- Detailed description of the addon's functionality -->
        <description>Fetch and display 'now playing' information from LMS.</description>
        <!-- Platform compatibility -->
        <platform>all</platform>
    </extension>

</addon>

